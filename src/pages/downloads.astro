---
import { getCollection } from 'astro:content';
import Layout from '@/layouts/Layout.astro';
import DownloadSection from '@/widgets/DownloadSection/DownloadSection.astro';

const pages = await getCollection('pages');
const page = pages.find((p) => p.slug === 'downloads');
---

<Layout
	title={page?.data.title || 'LeaderTask - Скачать'}
	description={page?.data.description}
	isFollow={page?.data.isFollow}
>
	<DownloadSection />
</Layout>
