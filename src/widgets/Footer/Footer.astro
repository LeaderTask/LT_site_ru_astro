---
import { LINKS } from '@/shared';
import Devider from '@/shared/ui/Devider/Devider.astro';

const DOWNLOADS = [
	{
		href: 'https://play.google.com/store/apps/details?id=com.leadertask.app&pli=1',
		image: 'google-play',
	},
	{
		href: 'https://apps.apple.com/ru/app/%D0%BB%D0%B8%D0%B4%D0%B5%D1%80%D1%82%D0%B0%D1%81%D0%BA-%D0%BF%D0%BB%D0%B0%D0%BD%D0%B8%D1%80%D0%BE%D0%B2%D1%89%D0%B8%D0%BA-%D0%B7%D0%B0%D0%B4%D0%B0%D1%87/id6504613667',
		image: 'app-store',
	},
	{
		href: 'https://appgallery.huawei.com/app/C113857521',
		image: 'app-gallery',
	},
];
---

<footer class="bg-light mt-15 lg:mt-30">
	<div class="xl:container lg:mx-auto p-5 lg:p-16 flex flex-col gap-5 lg:gap-12">
		<div class="grid grid-cols-2 lg:grid-cols-4 gap-x-4 gap-y-8 lg:gap-8">
			{
				LINKS.map((link) => (
					<div class="text-primary flex flex-col gap-5 lg:gap-6">
						<p class="text-[16px] lg:text-[22px] leading-5 lg:leading-6 font-bold">{link.title}</p>
						<ul class="space-y-2">
							{link.links.map(({ href, label }) => (
								<li>
									<a
										href={href}
										class="hover:text-accent-orange text-[14px] lg:text-[16px] transition-colors duration-200"
									>
										{label}
									</a>
								</li>
							))}
						</ul>
					</div>
				))
			}
			<div class="text-primary flex flex-col gap-6">
				<p class="text-[16px] lg:text-[22px] leading-5 lg:leading-6 font-bold">Download</p>
				<ul class="flex flex-col gap-2">
					{
						DOWNLOADS.map((image) => (
							<li class="relative group cursor-pointer w-36.5 lg:w-37 h-10">
								<a
									href={image.href}
									target="_blank"
									rel="noopener noreferrer noopener"
									aria-label={`Скачать LeaderTask из ${image.image === 'google-play' ? 'Google Play' : image.image === 'app-store' ? 'App Store' : 'AppGallery'}`}
								>
									<img
										src={`/${image.image}_white.webp`}
										alt=""
										class="w-full h-full group-hover:opacity-0 transition-all duration-200"
										loading="lazy"
										aria-hidden="true"
									/>
									<img
										src={`/${image.image}_black.webp`}
										alt=""
										class="w-full h-full opacity-0 group-hover:opacity-100 transition-all duration-200 absolute inset-0"
										loading="lazy"
										aria-hidden="true"
									/>
								</a>
							</li>
						))
					}
				</ul>
			</div>
		</div>
		<div class="opacity-20">
			<Devider />
		</div>
		<div class="flex flex-col gap-5 lg:flex-row justify-between">
			<div class="flex flex-col lg:flex-row items-center gap-5 lg:gap-12">
				<a
					href="/"
					class="order-2 lg:order-0"
					aria-label="LeaderTask - перейти на главную страницу"
				>
					<svg
						class="w-32.5 lg:w-41 h-10"
						aria-hidden="true"
					>
						<use href="/icons/all-icons.svg#icon-logo"></use>
					</svg>
				</a>
				<div class="opacity-20 lg:hidden order-1">
					<Devider />
				</div>
				<div class="flex flex-col lg:flex-row gap-5 lg:gap-12">
					<p class="font-bold text-[16px] leading-5 text-primary text-center lg:hidden">Contact us</p>
					<a
						href="mailto:911@leadertask.com"
						class="flex gap-3 text-primary lg:text-secondary lg:font-medium items-center lg:hover:text-accent-orange transition-colors duration-200"
						aria-label="Написать нам на email: 911@leadertask.com"
					>
						<svg
							class="w-5 h-5"
							aria-hidden="true"
						>
							<use href="/icons/all-icons.svg#icon-email"></use>
						</svg>
						<span class="text-[14px] leading-5 lg:text-[16px] lg:leading-6">911@leadertask.com</span>
					</a>
					<div class="flex gap-4 justify-center lg:justify-start">
						<a
							href="https://wa.me/79206512720"
							target="_blank"
							rel="noopener noreferrer nofollow"
							class="w-8 cursor-pointer group h-8 relative"
							aria-label="Связаться с нами в WhatsApp"
						>
							<svg
								class="w-full h-full gorup-hover:opacity-0 transition-all duration-200"
								aria-hidden="true"
							>
								<use href="/icons/all-icons.svg#icon-whatsapp-transparent"></use>
							</svg>
							<svg
								class="w-full h-full absolute inset-0 opacity-0 group-hover:opacity-100 transition-all duration-200"
								aria-hidden="true"
							>
								<use href="/icons/all-icons.svg#icon-whatsapp"></use>
							</svg>
						</a>
						<a
							href="https://t.me/leadertask_support"
							target="_blank"
							rel="noopener noreferrer nofollow"
							class="w-8 cursor-pointer group h-8 relative"
							aria-label="Связаться с нами в Telegram"
						>
							<svg
								class="w-full h-full gorup-hover:opacity-0 transition-all duration-200"
								aria-hidden="true"
							>
								<use href="/icons/all-icons.svg#icon-telegram-transparent"></use>
							</svg>
							<svg
								class="w-full h-full absolute inset-0 opacity-0 group-hover:opacity-100 transition-all duration-200"
								aria-hidden="true"
							>
								<use href="/icons/all-icons.svg#icon-telegram"></use>
							</svg>
						</a>
						<a
							href="https://www.youtube.com/@LeadertaskOrganizer/featured"
							target="_blank"
							rel="noopener noreferrer nofollow"
							class="w-8 cursor-pointer group h-8 relative"
							aria-label="Подписаться на наш YouTube канал"
						>
							<svg
								class="w-full h-full gorup-hover:opacity-0 transition-all duration-200"
								aria-hidden="true"
							>
								<use href="/icons/all-icons.svg#icon-youtube-transparent"></use>
							</svg>
							<svg
								class="w-full h-full absolute inset-0 opacity-0 group-hover:opacity-100 transition-all duration-200"
								aria-hidden="true"
							>
								<use href="/icons/all-icons.svg#icon-youtube"></use>
							</svg>
						</a>
					</div>
				</div>
			</div>
			<div class="grid grid-cols-2 w-max mx-auto lg:mx-0 lg:w-auto lg:flex gap-4 lg:gap-6 items-center">
				<a
					href="/privacy-policy"
					class="flex text-[14px] font-medium hover:text-accent-orange transition-all duration-200 group leading-5 text-secondary"
				>
					<span>Privacy Policy</span>
					<svg
						class="w-5 text-accent-orange transition-all duration-200 -translate-y-0.75 group-hover:-translate-y-1.25 h-5"
					>
						<use href="/icons/all-icons.svg#icon-arrow-more"></use>
					</svg>
				</a>
				<a
					href="/user-agreement"
					class="flex text-[14px] font-medium hover:text-accent-orange transition-all duration-200 group leading-5 text-secondary"
				>
					<span>User Agreement</span>
					<svg
						class="w-5 text-accent-orange transition-all duration-200 -translate-y-0.75 group-hover:-translate-y-1.25 h-5"
					>
						<use href="/icons/all-icons.svg#icon-arrow-more"></use>
					</svg>
				</a>
				<a
					href="https://www.market.leadertask.com/user?t=sign-in"
					target="_blank"
					class="flex mx-auto lg:mx-0 col-span-2 lg:col-auto text-[14px] font-medium hover:text-accent-orange transition-all duration-200 group leading-5 text-secondary"
				>
					<span>My account</span>
					<svg
						class="w-5 text-accent-orange transition-all duration-200 -translate-y-0.75 group-hover:-translate-y-1.25 h-5"
					>
						<use href="/icons/all-icons.svg#icon-arrow-more"></use>
					</svg>
				</a>
				<a
					href="https://www.leadertask.ru"
					class="text-[14px]"
				>
					RU
				</a>
			</div>
		</div>
		<div class="opacity-20">
			<Devider />
		</div>
		<span class="block mx-auto text-[12px] leading-4 text-tertiary">© 2025 Organizer LeaderTask, LLC</span>
	</div>
</footer>
