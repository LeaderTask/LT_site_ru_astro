---
import { Image } from 'astro:assets';
import GradientTextElem from '@/shared/ui/GradientTextElem/GradientTextElem.astro';
import { getImageDimensions } from '@/shared';

const imagesDimensions = {
	creationTask1: await getImageDimensions('/creation-task-1.webp'),
	creationTask2: await getImageDimensions('/creation-task-2.webp'),
	creationTask3Tablet: await getImageDimensions('/creation-task-3_tablet.webp'),
	creationTask3: await getImageDimensions('/creation-task-3.webp'),
	creationTask4: await getImageDimensions('/creation-task-4.webp'),
	creationTask5: await getImageDimensions('/creation-task-5.webp'),
};
---

<section class="flex flex-col gap-8 md:gap-12 xl:gap-15 items-center pt-12 md:pt-20 xl:pt-30">
	<h3
		class="text-[24px] md:text-[32px] lg:text-[38px] xl:text-[44px] leading-7 md:leading-8 lg:leading-10 xl:leading-11 font-bold text-primary text-center"
	>
		Создавайте задачи
		<br class="lg:hidden" />
		<GradientTextElem>как вам удобно</GradientTextElem>
	</h3>
	<div class="w-full flex flex-col lg:flex-row justify-center items-stretch xl:items-start gap-4 xl:gap-8">
		<div
			class="flex flex-col gap-2 h-105 md:h-125 lg:h-150 xl:h-152 w-full xl:w-102.5 bg-accent-orange rounded-5 overflow-hidden"
		>
			<h4 class="text-white text-lg md:text-xl lg:text-[24px] leading-6 lg:leading-8 font-bold p-4 md:p-5 lg:p-6 text-center">
				Вручную в приложении
			</h4>
			<Image
				src="/creation-task-1.webp"
				alt="Creation Task 1"
				width={imagesDimensions.creationTask1.width}
				height={imagesDimensions.creationTask1.height}
				class="w-full h-full"
				loading="lazy"
			/>
		</div>
		<div class="flex flex-col gap-4 xl:gap-8 w-full xl:w-102.5">
			<div class="flex flex-col gap-2 h-60 md:h-80 xl:h-88 bg-purple-light rounded-5 overflow-hidden">
				<h4
					class="text-primary text-lg md:text-xl lg:text-[24px] leading-6 lg:leading-8 font-bold p-4 md:p-5 lg:p-6 text-center"
				>
					По email
				</h4>
				<Image
					src="/creation-task-2.webp"
					alt="Creation Task 2"
					width={imagesDimensions.creationTask2.width}
					height={imagesDimensions.creationTask2.height}
					class="w-full h-full"
					loading="lazy"
				/>
			</div>
			<div class="flex flex-col justify-between gap-2 h-47.5 md:h-50 xl:h-56 bg-white rounded-5 relative overflow-hidden">
				<h4
					class="text-primary relative z-2 text-lg md:text-xl lg:text-[24px] leading-6 lg:leading-8 font-bold p-4 md:p-5 lg:p-6 text-center"
				>
					Прямо в Telegram
				</h4>
				<Image
					src="/creation-task-3_tablet.webp"
					alt="Creation Task 3"
					width={imagesDimensions.creationTask3Tablet.width}
					height={imagesDimensions.creationTask3Tablet.height}
					class="w-full h-full hidden md:block lg:hidden absolute inset-0"
					loading="lazy"
				/>
				<Image
					src="/creation-task-3.webp"
					alt="Creation Task 3"
					width={imagesDimensions.creationTask3.width}
					height={imagesDimensions.creationTask3.height}
					class="w-full h-full md:hidden lg:block absolute object-contain inset-0"
					loading="lazy"
				/>
			</div>
		</div>
		<div class="flex flex-col gap-4 xl:gap-8 w-full xl:w-102.5">
			<div class="flex flex-col gap-2 h-47.5 md:h-50 xl:h-56 bg-orange-light rounded-5 overflow-hidden">
				<h4
					class="text-primary text-lg md:text-xl lg:text-[24px] leading-6 lg:leading-8 font-bold p-4 md:p-5 lg:p-6 text-center"
				>
					Голосом в приложении
				</h4>
				<Image
					src="/creation-task-4.webp"
					alt="Creation Task 4"
					width={imagesDimensions.creationTask4.width}
					height={imagesDimensions.creationTask4.height}
					class="w-full h-50 md:-translate-y-15 -translate-y-14"
					loading="lazy"
				/>
			</div>
			<div class="flex flex-col items-center gap-2 h-60 md:h-80 xl:h-88 bg-gray-light rounded-5 overflow-hidden">
				<h4
					class="text-primary text-lg md:text-xl lg:text-[24px] leading-6 lg:leading-8 font-bold p-4 md:p-5 lg:p-6 text-center"
				>
					В виджете браузера
				</h4>
				<Image
					src="/creation-task-5.webp"
					alt="Creation Task 5"
					width={imagesDimensions.creationTask5.width}
					height={imagesDimensions.creationTask5.height}
					class="w-full h-full"
					loading="lazy"
				/>
			</div>
		</div>
	</div>
</section>
