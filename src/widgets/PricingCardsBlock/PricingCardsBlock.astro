---
import PricingCard from '@/widgets/PricingCard/PricingCard.astro';

interface Feature {
	title: string;
	description: string;
}

type PlanType = 'free' | 'premium' | 'business';

interface Plan {
	title: string;
	subtitle: string;
	price: number;
	priceDescription: string;
	buttonText: string;
	featuresTitle: string;
	features: Feature[];
	planType: PlanType;
}

const FREE_FEATURES: Feature[] = [
	{ title: 'Up to 100 cards', description: "Visualize your personal goals and organize your team's work" },
	{ title: 'Up to 10 projects', description: 'Separate your tasks into personal, work, or other categories' },
	{ title: 'Up to 3 boards', description: 'Visualize your goals on a Kanban board' },
	{ title: 'Notifications', description: 'Get reminders about upcoming tasks, meetings, and events' },
	{ title: 'Calendar', description: 'Plan your days and manage your time visually' },
];

const PREMIUM_FEATURES: Feature[] = [
	{ title: 'Unlimited', description: 'Tasks, projects, boards, labels, and colors' },
	{ title: 'Sync', description: 'Create tasks on your phone and complete them on your laptop' },
	{ title: 'Attachments', description: 'Add documents, images, and voice notes to tasks' },
	{ title: 'Recurring tasks', description: 'Repeat daily, weekly, monthly, or yearly' },
	{ title: 'Trash bin', description: 'Restore deleted data and work with peace of mind â€“ nothing gets lost' },
	{ title: 'Cloud storage', description: '2 GB' },
	{ title: 'Telegram integration', description: 'Create and manage tasks right from Telegram' },
];

const BUSINESS_FEATURES: Feature[] = [
	{ title: 'Assignments', description: 'Delegate tasks to your teammates and track their progress' },
	{ title: 'Shared projects', description: 'Work together with your team toward a common goal' },
	{ title: 'Shared boards', description: "Visualize your team's workflow and progress" },
	{ title: 'Activity history', description: 'Track task updates and card movements over time' },
];

const PLANS: Plan[] = [
	{
		title: 'Free',
		subtitle: 'Only on one device',
		price: 0,
		priceDescription: 'per year',
		buttonText: 'Try now',
		featuresTitle: 'Free, forever',
		features: FREE_FEATURES,
		planType: 'free',
	},
	{
		title: 'Premium',
		subtitle: 'For personal use only',
		price: 35.99,
		priceDescription: 'per year',
		buttonText: 'Subscribe',
		featuresTitle: 'Free plan features, plus:',
		features: PREMIUM_FEATURES,
		planType: 'premium',
	},
	{
		title: 'Business',
		subtitle: 'For team collaboration (2+ users)',
		price: 55.99,
		priceDescription: 'per year',
		buttonText: 'Subscribe',
		featuresTitle: 'Premium plan features, plus:',
		features: BUSINESS_FEATURES,
		planType: 'business',
	},
];
---

<div class="grid grid-cols-1 md:grid-cols-3 md:gap-8 gap-6 mb-10 md:mb-15">
	{
		PLANS.map((plan) => (
			<PricingCard
				title={plan.title}
				subtitle={plan.subtitle}
				price={plan.price}
				priceDescription={plan.priceDescription}
				buttonText={plan.buttonText}
				featuresTitle={plan.featuresTitle}
				features={plan.features}
				planType={plan.planType}
			/>
		))
	}
</div>
