---
interface Props {
	title: string;
	description: string;
	year: string;
}

const { title, description, year } = Astro.props;
---

<div class="flex flex-col items-start justify-center gap-2 lg:gap-4 bg-white rounded-5 px-4 lg:px-6 py-3 lg:py-5 w-full">
	<div class="flex lg:flex-row flex-col-reverse items-start lg:items-center justify-between gap-4 lg:gap-2 w-full">
		<p class="text-[18px] lg:text-[24px] leading-6 lg:leading-8 font-bold text-primary">{title}</p>
		<p
			class="text-[14px] lg:text-[18px] leading-5 lg:leading-6 text-accent-orange bg-orange-light px-3 lg:px-4 py-0.75 lg:py-1.5 rounded-9 text-center shrink-0 font-bold"
		>
			{year}
		</p>
	</div>
	<p
		class="text-[16px] lg:text-[20px] leading-6 lg:leading-8 text-secondary max-w-120"
		set:html={description}
	/>
</div>
