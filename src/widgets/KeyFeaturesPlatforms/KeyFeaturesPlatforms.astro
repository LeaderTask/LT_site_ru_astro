---
interface Props {
	features: {
		icon: string;
		title: string;
		description: string;
	}[];
}

const { features } = Astro.props;
---

<section class="py-15 md:py-20 xl:py-30">
	<h3 class="text-[24px] lg:text-[44px] lg:leading-10 font-bold text-primary text-center mb-6 lg:mb-15">Ключевые возможности</h3>
	<div class="gap-4 lg:gap-8 grid grid-cols-[repeat(auto-fit,minmax(416px,1fr))]">
		{
			features.map((feature: { icon: string; title: string; description: string }) => (
				<div class="flex flex-col items-start justify-center bg-white rounded-5 p-6 shadow-card w-full">
					<svg class="w-8 h-8 shrink-0">
						<use href={`/icons/all-icons.svg#${feature.icon}`} />
					</svg>
					<h4 class="text-[18px] lg:text-[24px] leading-7 font-bold text-primary mt-3 mb-2">{feature.title}</h4>
					<p
						class="text-[16px] leading-6 text-secondary"
						set:html={feature.description}
					/>
				</div>
			))
		}
	</div>
</section>
