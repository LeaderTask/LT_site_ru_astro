---
interface Props {
	buttonId: string;
}

const { buttonId } = Astro.props;
---

<div
	id={`ripple-${buttonId}`}
	class="absolute pointer-events-none ripple-effect"
>
</div>

<style>
	.ripple-effect {
		background-color: #0a0a0c;
		opacity: 0.1;
		border-radius: 50%;
		transform: scale(0);
		animation: ripple 0.6s ease-out;
		display: none;
	}

	@keyframes ripple {
		0% {
			transform: scale(0);
			opacity: 0.1;
		}
		100% {
			transform: scale(1);
			opacity: 0;
		}
	}
</style>
