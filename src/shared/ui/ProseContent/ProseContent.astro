---
interface Props {
	type?: 'page' | 'article';
	customClasses?: string;
}

const { type = 'page', customClasses } = Astro.props;

const proseClasses =
	type === 'page'
		? `prose prose-lg max-w-none
			[&_p]:text-secondary [&_p]:text-base [&_p]:leading-6 [&_p]:py-0 [&_p]:my-0
			md:[&_p]:text-[20px] md:[&_p]:leading-8

			[&_h2]:text-[24px] [&_h2]:leading-7 [&_h2]:bold [&_h2]:text-primary
			md:[&_h2]:text-[44px] md:[&_h2]:leading-13

			[&_h3]:text-[20px] [&_h3]:leading-6 [&_h3]:bold [&_h3]:mt-4 [&_h3]:mb-2 [&_h3]:text-primary
			md:[&_h3]:text-[24px] md:[&_h3]:leading-8 md:[&_h3]:mt-8 md:[&_h3]:mb-4

			[&_h4]:text-4 [&_h4]:leading-6 [&_h4]:semibold [&_h4]:mt-4 [&_h4]:mb-2 [&_h4]:text-primary
			md:[&_h4]:text-[20px] md:[&_h4]:leading-6 md:[&_h4]:mt-8 md:[&_h4]:mb-4

			[&_ul]:list-disc [&_ul]:pl-4 md:[&_ul]:pl-5.5 [&_ul]:mb-4 md:[&_ul]:mb-8
			[&_ul>li::marker]:text-[16px] [&_ul>li::marker]:leading-6 [&_ul>li::marker]:semibold [&_ul>li::marker]:text-accent-orange
			md:[&_ul>li::marker]:text-[20px] md:[&_ul>li::marker]:leading-8

			[&_ol]:list-decimal [&_ol]:pl-4 md:[&_ol]:pl-5.5
			[&_ol>li::marker]:content-[counter(list-item)'_'] [&_ol>li::marker]:text-[16px] [&_ol>li::marker]:leading-6 [&_ol>li::marker]:semibold [&_ol>li::marker]:text-accent-orange
			md:[&_ol>li::marker]:text-[20px] md:[&_ol>li::marker]:leading-8

			[&_li]:my-[12px] [&_li]:text-secondary [&_li]:text-[16px] [&_li]:leading-6 [&_li]:regular [&_li]:pl-1
			md:[&_li]:text-[20px] md:[&_li]:leading-8 md:[&_li]:pl-2

			[&_img]:my-4 md:[&_img]:my-8

			[&_a]:text-accent-blue-link [&_a]:no-underline [&_a:visited]:text-accent-purple-link [&_a:hover]:no-underline`
		: "prose lg:prose-lg max-w-none [&_p]:text-[16px] lg:[&_p]:text-[20px] [&_p]:leading-6 lg:[&_p]:leading-8 [&_p]:text-primary [&_a]:text-accent-blue [&_li]:marker:text-accent-orange [&_li]:text-primary [&_li]:font-medium [&_ol>li]:marker:font-bold [&_ol>li::marker]:content-[counter(list-item)'_'] [&_img]:rounded-2.5xl [&_img]:max-h-95 [&_img]:w-full [&_img]:object-cover [&_h1]:text-primary [&_h1]:font-bold [&_h1]:scroll-mt-25 [&_h1.visited]:text-accent-orange-visited [&_h2]:text-primary [&_h2]:font-bold [&_h2]:scroll-mt-25 [&_h2.visited]:text-accent-orange-visited [&_h3]:text-primary [&_h3]:font-bold [&_h3]:scroll-mt-25 [&_h3.visited]:text-accent-orange-visited [&_h4]:text-primary [&_h4]:font-bold [&_h4]:scroll-mt-25 [&_h4.visited]:text-accent-orange-visited [&_h5]:text-primary [&_h5]:font-bold [&_h5]:scroll-mt-25 [&_h5.visited]:text-accent-orange-visited [&_h6]:text-primary [&_h6]:font-bold [&_h6]:scroll-mt-25 [&_h6.visited]:text-accent-orange-visited [&_a]:no-underline";
---

<div class={`${proseClasses} ${customClasses}`}>
	<slot />
</div>
