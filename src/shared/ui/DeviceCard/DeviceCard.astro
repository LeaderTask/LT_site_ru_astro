---
interface Props {
	device: any;
	cardClass?: string;
}

const { device, cardClass } = Astro.props;
---

<a
	href={device.link}
	target="_self"
	rel="noopener noreferrer"
	class={`group flex flex-col items-center justify-center rounded-3 bg-gray-light hover:bg-white transition-all duration-300 gap-1 md:gap-3 ${cardClass ?? 'p-5.5 lg:p-9 xl:p-15'}`}
>
	<div class={`transition-colors duration-300 ${device.iconColor ?? ''} group-hover:text-accent-orange`}>
		{
			device.icon && (
				<svg class={device.iconClass ?? 'w-7 h-7 md:w-8 md:h-8'}>
					<use href={`/icons/all-icons.svg#${device.icon}`} />
				</svg>
			)
		}
	</div>
	<div class="flex items-baseline gap-2 md:gap-3">
		<span
			class={`font-bold whitespace-nowrap text-[14px] leading-5 md:text-[22px] md:leading-6 transition-colors duration-300 pl-1 pb-1 tracking-[0.02em] ${device.textColor ?? ''} group-hover:text-accent-orange`}
		>
			{device.title}
		</span>
		<svg
			class={`w-3 h-3 md:w-5 md:h-5 transition-colors duration-300 ${device.arrowColor ?? ''} group-hover:text-accent-orange`}
		>
			<use href="/icons/all-icons.svg#icon-arrow-link"></use>
		</svg>
	</div>
	{
		device.description && (
			<span
				class={`text-[14px] text-center leading-5 md:text-[16px] md:leading-6 ${device.textColor ?? ''} group-hover:text-accent-orange`}
			>
				{device.description}
			</span>
		)
	}
</a>
